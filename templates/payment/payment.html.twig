{% block title %}Paiement{% endblock %}

{% block body %}

{% for message in app.flashes('notice') %}
    <div style="height:70px;background-color:#4BB543;font-size:20px;color:#fff" class="list-single-main-wrapper fl-wrap">
      {{ message }}
    </div>

{% endfor %}

<!--content-->  
                <div class="content">
                    <!--section -->  
                    <section id="sec1">
                        <div class="container">
                            <div class="row">
                                <div class="offset-md-3 col-md-6">
